{
	"name": "learn-vulkan",
	"dependencies": {
		"gfm": "~>8.0.6",
		"bindbc-glfw": "~>1.0.0",
		"erupted": "~>2.1.42+v1.2.192",
		"expected": "~>0.2.4",
		"optional": "~>1.2.1"
	},
	"subConfigurations": {
		"bindbc-glfw": "staticBC"
	},
	"versions": [
		"GLFW_33"
	],
	"dflags": [
		"-preview=in",
		"-preview=dip25",
		"-preview=dip1000",
		"-preview=dip1008"
	],
	"buildTypes": {
		"debug-app": {
			"buildOptions": ["debugMode", "debugInfo"],
			"debugVersions": ["LearnVulkan_ValidationLayers"],
			"libs": ["dependencies/glfw/build/src/Debug/glfw3"],
			"dflags-ldc": ["-g", "-gc"],
			"dflags-windows-ldc": ["--mscrtlib=msvcrtd"]
		},
		"release-app": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs": ["dependencies/glfw/build/src/Release/glfw3"],
			"dflags-windows-ldc": ["--mscrtlib=msvcrt"]
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
			"debugVersions": ["LearnVulkan_ValidationLayers"],
			"libs": ["dependencies/glfw/build/src/Debug/glfw3"],
			"dflags-ldc": ["-g", "-gc"],
			"dflags-windows-ldc": ["--mscrtlib=msvcrtd"]
		},
		"unittest-opt": 
		{
			"buildOptions": ["unittests", "optimize", "inline"],
			"libs": ["dependencies/glfw/build/src/Release/glfw3"],
			"dflags-windows-ldc": ["--mscrtlib=msvcrt"]
		}
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable"
		}
	]
}
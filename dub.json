{
	"name": "learn-vulkan",
	"dependencies": {
		"bindbc-glfw": "~>1.0.0"
	},
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"buildTypes": {
		"debug-app": {
			"buildOptions": ["debugMode", "debugInfo"],
			"libs": ["dependencies/glfw/build/src/Debug/glfw3"]
		},
		"release-app": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs-windows": ["dependencies/glfw/build/src/Release/glfw3"]
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
			"libs-windows": ["dependencies/glfw/build/src/Debug/glfw3"]
		},
		"unittest-opt": 
		{
			"buildOptions": ["unittests", "optimize", "inline"],
			"libs-windows": ["dependencies/glfw/build/src/Release/glfw3"]
		}
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable"
		}
	]
}
{
	"name": "learn-vulkan",
	"dependencies": {
		"gfm": "~>8.0.6",
		"bindbc-glfw": "~>1.0.0",
		"erupted": "~>2.1.42+v1.2.192"
	},
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"dflags-windows": ["--mscrtlib=msvcrt"],
	"buildTypes": {
		"debug-app": {
			"buildOptions": ["debugMode", "debugInfo"],
			"libs": ["dependencies/glfw/build/src/Debug/glfw3"]
		},
		"release-app": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs": ["dependencies/glfw/build/src/Release/glfw3"]
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
			"libs": ["dependencies/glfw/build/src/Debug/glfw3"]
		},
		"unittest-opt": 
		{
			"buildOptions": ["unittests", "optimize", "inline"],
			"libs": ["dependencies/glfw/build/src/Release/glfw3"]
		}
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable"
		}
	]
}